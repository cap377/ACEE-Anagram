<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.androidbootcamp.anagramproject" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:versionCode="2"
        android:versionName="1.1"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <!-- Splash Screen -->
        <activity
            android:name=".SplashPage"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main activity -->
        <activity
            android:name=".TitlePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AboutPage"
            android:label="@string/title_activity_about_page"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GameStartPage"
            android:label="GameStartPage"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GameEndPage"
            android:label="GameEndPage"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DifficultyPage"
            android:label="DifficultyPage"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HowToPlayPage"
            android:label="HowToPlayPage"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".StatisticsPage"
            android:label="StatisticsPage"
            android:screenOrientation="portrait">
        </activity>

    </application>
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>
