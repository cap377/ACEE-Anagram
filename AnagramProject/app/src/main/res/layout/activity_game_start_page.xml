<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.anagramproject.GameStartPage"
    android:background="@drawable/beach1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick = "goToNextPage"
        android:background="@drawable/round_background"
        android:textSize="24dp"
        android:text="Skip"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:width="100dp"
        android:background="@drawable/round_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:textSize="24dp" />
        android:layout_alignParentEnd="true"
        android:background="@drawable/round_background"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:onClick = "checkIfRight"
        android:background="@drawable/round_background"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Words Found: 0"
        android:id="@+id/wordsFound"
        android:background="@drawable/round_background"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/wordsSkipped"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Words Skipped: 0"
        android:id="@+id/wordsSkipped"
        android:background="@drawable/round_background"
        android:textSize="24dp"

        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView7"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:background="@drawable/round_background"
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#ababab" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView8"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:background="@drawable/round_background"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#909090" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Insert Answer Here"
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textColor="#ffffff" />
</RelativeLayout>
